<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/bAbfahrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Fahrt beginnen"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bAnkunft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fahrt beenden"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline"
        app:layout_constraintTop_toTopOf="@+id/bAbfahrt" />

    <EditText
        android:id="@+id/eTAbfahrtOrt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ort"
        app:layout_constraintEnd_toEndOf="@+id/bAbfahrt"
        app:layout_constraintStart_toStartOf="@+id/bAbfahrt"
        app:layout_constraintTop_toBottomOf="@+id/bAbfahrt" />

    <EditText
        android:id="@+id/eTAnkunftOrt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Ort"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/bAnkunft"
        app:layout_constraintStart_toStartOf="@+id/bAnkunft"
        app:layout_constraintTop_toBottomOf="@+id/bAnkunft" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/bDienstende"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Dienst beenden"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bNeueFahrt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Button"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/bDienstende"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bAbfahrtSenden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Senden"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/eTAbfahrtOrt"
        app:layout_constraintStart_toStartOf="@+id/eTAbfahrtOrt"
        app:layout_constraintTop_toBottomOf="@+id/eTAbfahrtOrt" />

    <Button
        android:id="@+id/bAnkunftSenden"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Senden"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/eTAnkunftOrt"
        app:layout_constraintStart_toStartOf="@+id/eTAnkunftOrt"
        app:layout_constraintTop_toBottomOf="@+id/eTAnkunftOrt" />

</androidx.constraintlayout.widget.ConstraintLayout>